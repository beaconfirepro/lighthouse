{
  "name": "@lighthouse/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "echo db dev",
    "build": "echo \"no build for db package\"",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts,.tsx",
    "test": "echo db test",
    "db:migrate": "node --loader ts-node/esm ../../node_modules/knex/bin/cli.js --knexfile knexfile.ts migrate:latest",
    "db:rollback": "node --loader ts-node/esm ../../node_modules/knex/bin/cli.js --knexfile knexfile.ts migrate:rollback",
    "db:seed": "node --loader ts-node/esm ../../node_modules/knex/bin/cli.js --knexfile knexfile.ts seed:run"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "knex": "^3.1.0",
    "mssql": "^10.0.2",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}

{
  "name": "lighthouse",
  "private": true,
  "packageManager": "npm@11.4.2",
  "engines": {
    "node": ">=20 <21 || >=22 <23"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier -w .",
    "verify:bootstrap": "node scripts/verify_task1.mjs",
    "verify:env": "node scripts/verify_env.mjs",
    "db:migrate": "npm --prefix packages/db run db:migrate",
    "db:rollback": "npm --prefix packages/db run db:rollback",
    "db:seed": "npm --prefix packages/db run db:seed"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.5",
    "typescript": "^5.5.4"
  }
}

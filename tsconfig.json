{
  "files": [],
  "references": [],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/*"],
      "@lighthouse/db": ["packages/db/src"],        // for TS resolution
      "@lighthouse/shared": ["packages/shared/src"]  // optional symmetry
    }
  }
}
